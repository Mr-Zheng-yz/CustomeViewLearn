<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item
        android:left="8dp"
        android:right="8dp">
        <shape>
            <solid android:color="#207CCC" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0dp"
        android:left="8dp"
        android:right="8dp"
        android:top="0dp">
        <shape>
            <solid android:color="#207CCC" />
            <corners android:radius="8dp" /> <!-- 设置圆角半径 -->
        </shape>
    </item>

</layer-list>